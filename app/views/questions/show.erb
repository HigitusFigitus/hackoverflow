<h3><%= @question.title %></h3>

<p><%= @question.text %></p>	
<p><%= @question.user_id %></p>

<p><%= @question.text %></p>
<form method="post" action='/questions/<%= @question.id  %>/votes'>
	<button type="submit">Up</button>
	<%= @question.votes.count %>
	<button type="submit">Down</button>
</form>

<% if session["user"] %>

	<a href="/questions/<%= @question.id%>/edit">Edit</a>
<% end %>

<!-- Delete button -->

<% if session["user"] %>
	<form id="Delete question" action="/questions/<%= @question.id%>" method="post">
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="Delete">
	</form>
<% end %>

<!-- comments for the question -->
<% @question.comments.each do |comment| %>
	<ul>
		<form method="post" action='/questions/<%= @question.id  %>/comment/<%= comment.id  %>/votes'>
			<button type="submit">Up</button>
			<%= comment.votes.count %>
		<button type="submit">Down</button>
		</form>

		<li><%= comment.text %></li>
		
		<form id="Delete question comment" action="/questions/<%= @question.id%>/comment/<%= comment.id %>" method="post">
					<input type="hidden" name="_method" value="delete">
					<input type="submit" value="Delete">
				</form>

	</ul>
<% end %>

<% if current_user %>
	<form id="Question-comments" action="/questions/<%= @question.id %>" method="post">
		<p>Comment:</p>
		<textarea name="comment[text]"></textarea><br>
		<input type="submit" value="Comment">
	</form>
<% end %>
<br>
<br>

<!-- put the answers for the question -->
<% @answers.each do |answer| %>
	<ul>
		<form method="post" action='/questions/<%= @question.id  %>/answers/<%= answer.id %>/votes'>
			<button type="submit">Up</button>
			<%= answer.votes.count %>
		<button type="submit">Down</button>
		</form>
		<li><%= answer.text %></li>
		<!-- list of the comments -->
		<% answer.comments.each do |comment| %>
			<ul>
				<form method="post" action='/questions/<%= @question.id  %>/answers/<%= answer.id %>/comments/<%= comment.id %>/votes'>
			<button type="submit">Up</button>
			<%= comment.votes.count %>
			<button type="submit">Down</button>
		</form>
				<li><%= comment.text %></li>
			</ul>
		<% end %>
		<!-- comments for the answer -->
		<% if current_user %>
			<form id="Answer-comments" action="/questions/<%= @question.id %>/answers/<%= answer.id %>" method="post">
				<p>Comment:</p>
				<textarea name="comment[text]"></textarea><br>
				<input type="submit" value="Comment">
			</form>
		<% end %>
	</ul>
<% end %>

<% if current_user %>
		<form id="Answers" action="/questions/<%= @question.id %>/answers" method="post">
			<p>Answer:</p>
			<textarea name="answer[text]"></textarea><br>
			<input type="submit" value="Post">
		</form>
	<% end %>
